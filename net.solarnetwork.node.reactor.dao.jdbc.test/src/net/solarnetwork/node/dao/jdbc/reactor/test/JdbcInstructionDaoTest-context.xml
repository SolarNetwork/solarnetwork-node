<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="databaseSetup" class="net.solarnetwork.node.dao.jdbc.DatabaseSetup"
			init-method="init">
		<property name="dataSource" ref="dataSource"/>
		<property name="initSqlResource" value="classpath:/net/solarnetwork/node/dao/jdbc/derby-init.sql"/>
	</bean>
	
	<bean id="jdbcInstructionDao" class="net.solarnetwork.node.dao.jdbc.reactor.JdbcInstructionDao"
		init-method="init" depends-on="databaseSetup">
		<property name="dataSource" ref="dataSource"/>
		<property name="sqlResourcePrefix" value="derby-instruction"/>
		<property name="useAutogeneratedKeys" value="true"/>
	</bean>

</beans>
