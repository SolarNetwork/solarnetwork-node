<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="jdbcConsumptionDatumDao" 
		class="net.solarnetwork.node.dao.jdbc.consumption.JdbcConsumptionDatumDao"
		init-method="init">
		<property name="dataSource" ref="dataSource"/>
		<property name="sqlResourcePrefix" value="derby-consumptiondatum"/>
		<property name="useAutogeneratedKeys" value="true"/>
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"/>
	</bean>

</beans>
