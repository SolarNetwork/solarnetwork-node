<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
						http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="dao.jdbc.cfg" persistent-id="net.solarnetwork.node.dao.jdbc">
		<prop key="DatabaseSetup.initSqlResource">classpath:/net/solarnetwork/node/dao/jdbc/derby-init.sql</prop>
		<prop key="jdbc.driver">org.apache.derby.jdbc.EmbeddedDriver</prop>
		<prop key="jdbc.url">jdbc:derby:solarnode;create=true</prop>
		<prop key="jdbc.user">solarnode</prop>
		<prop key="jdbc.pass">solarnode</prop>
		<prop key="jdbc.pool.maxIdle">0</prop>
		<prop key="jdbc.pool.maxActive">3</prop>
		<prop key="jdbc.pool.maxWait">20000</prop>
		<prop key="jdbc.pool.timeBetweenEvictionRunsMillis">120000</prop>
		<prop key="jdbc.pool.minEvictableIdleTimeMillis">300000</prop>
	</osgix:cm-properties>
	
	<!-- Service References -->
	
	<osgi:reference id="dataSourceFactory"
		interface="org.osgi.service.jdbc.DataSourceFactory"
        filter="(osgi.jdbc.driver.class=${jdbc.driver})"/>
	
	<!-- Published Services -->
	
	<osgi:service ref="settingDao" interface="net.solarnetwork.node.dao.SettingDao"/>
	
	<osgi:service ref="dataSource" interface="javax.sql.DataSource" depends-on="databaseSetup">
		<osgi:service-properties>
			<entry key="db" value="node"/>
		</osgi:service-properties>
	</osgi:service>

	<osgi:service ref="jdbcTemplate" interface="org.springframework.jdbc.core.JdbcOperations">
		<osgi:service-properties>
			<entry key="db" value="node"/>
		</osgi:service-properties>
	</osgi:service>

	<osgi:service ref="txManager" interface="org.springframework.transaction.PlatformTransactionManager"
		depends-on="databaseSetup">
		<osgi:service-properties>
			<entry key="db" value="node"/>
		</osgi:service-properties>
	</osgi:service>

</beans>
