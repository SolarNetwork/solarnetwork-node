<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http security="none" pattern="/*.do"/>
	<http security="none" pattern="/hello"/>
	
	<!-- Configure Spring Security -->
	<http auto-config="true">
	    <intercept-url pattern="/a/**" access="ROLE_USER" />
	    <custom-filter ref="associationFilter" before="FIRST"/>
		<form-login login-page="/login.do" default-target-url="/a/home.do"
			authentication-failure-url="/login.do?login_error=1"/>
		<logout logout-url="/logout" logout-success-url="/loggedout.do"/>
	</http>
	
	<beans:bean id="associationFilter" class="net.solarnetwork.node.setup.web.NodeAssociationFilter"/>

	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="settingsUserService">			
			<password-encoder ref="passwordEncoder"/>
		</authentication-provider>
	</authentication-manager>
	
	<beans:bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

	<beans:bean id="settingsUserService" class="net.solarnetwork.node.setup.web.support.SettingsUserService">
		<beans:constructor-arg ref="settingDao"/>
		<beans:constructor-arg ref="identityService"/>
		<beans:constructor-arg ref="passwordEncoder"/>
	</beans:bean>

</beans:beans>
