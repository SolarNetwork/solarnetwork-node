<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="packages" extends="default">
		<put-attribute name="navloc" value="packages" type="string"/>
		<put-attribute name="head" value="/WEB-INF/jsp/a/packages/packages-head.jsp"/>
		<put-attribute name="header" value="/WEB-INF/jsp/header.jsp"/>
	</definition>
	
	<definition name="packages/*" extends="packages">
		<put-attribute name="body" value="/WEB-INF/jsp/a/packages/{1}.jsp" />
	</definition>
		
</tiles-definitions>
