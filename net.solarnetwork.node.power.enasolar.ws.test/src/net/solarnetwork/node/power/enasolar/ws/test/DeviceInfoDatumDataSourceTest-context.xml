<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/enasolar.properties</value>
				<value>classpath:/env.properties</value>
			</list>
		</property>
	</bean>

	<bean id="datumDataSource" class="net.solarnetwork.node.power.enasolar.ws.DeviceInfoDatumDataSource"
			init-method="init">
		<property name="url" value="${enasolar.url}"/>
	</bean>

	<bean id="datumDataSourceList" class="net.solarnetwork.node.power.enasolar.ws.DeviceInfoDatumDataSource"
			init-method="init">
		<property name="urlList" value="${enasolar.urls}"/>
	</bean>
	
</beans>
