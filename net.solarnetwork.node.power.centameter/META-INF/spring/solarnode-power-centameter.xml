<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<ctx:property-placeholder properties-ref="centameter.cfg"/>
	
	<bean id="centameterPowerDatumDataSource"
		class="net.solarnetwork.node.power.impl.centameter.CentameterPowerDatumDataSource">
		<property name="addressSourceMappingValue" value="${CentameterPowerDataSource.addressSourceMappingValue}"/>
		<property name="ampSensorIndex" value="${CentameterPowerDataSource.ampSensorIndex}"/>
		<property name="voltage" value="${CentameterPowerDataSource.voltage}"/>
		<property name="sourceIdFilterValue" value="${CentameterPowerDataSource.sourceIdFilterValue}"/>
		<property name="sourceIdFormat" value="${CentameterPowerDataSource.sourceIdFormat}"/>
		<property name="multiAmpSensorIndexFlags" value="${CentameterPowerDataSource.multiAmpSensorIndexFlags}"/>
		<property name="dataCollectorFactory" ref="centameterDataCollectorFactory"/>
		<property name="collectAllSourceIds" value="${CentameterPowerDataSource.collectAllSourceIds}"/>
		<property name="collectAllSourceIdsTimeout" value="${CentameterPowerDataSource.collectAllSourceIdsTimeout}"/>
	</bean>
	
	<bean id="priceCentameterPowerDatumDataSource" class="net.solarnetwork.node.PriceLocationDatumDataSource">
		<property name="delegate" ref="centameterPowerDatumDataSource"/>
		<property name="priceLocationService" ref="priceLocationService"/>
		<property name="priceSource" value="${CentameterPowerDataSource.priceSource}"/>
		<property name="priceLocation" value="${CentameterPowerDataSource.priceLocation}"/>
	</bean>
	
</beans>
