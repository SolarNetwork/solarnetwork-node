<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<ctx:property-placeholder properties-ref="weather.cfg"/>
	
	<bean id="weatherDotComDayDatumDataSource"
		class="net.solarnetwork.node.weather.impl.WeatherDotComDayDatumDataSource"
		init-method="init"
		parent="weatherDotComWeatherDatumDataSource"/>
	
	<bean id="weatherDotComWeatherDatumDataSource"
		class="net.solarnetwork.node.weather.impl.WeatherDotComWeatherDatumDataSource"
		init-method="init">
		<property name="location" value="${WeatherDotCom.location}"/>
		<property name="partnerId" value="${WeatherDotCom.partnerId}"/>
		<property name="licenseKey" value="${WeatherDotCom.licenseKey}"/>
	</bean>
	
</beans>
