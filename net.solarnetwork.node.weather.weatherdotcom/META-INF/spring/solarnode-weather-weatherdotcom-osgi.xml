<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
						http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->

	<osgix:cm-properties id="weather.cfg" persistent-id="net.solarnetwork.node.weather.weatherdotcom">
		<prop key="WeatherDotCom.location">NZXX0049</prop>
		<prop key="WeatherDotCom.partnerId">555</prop>
		<prop key="WeatherDotCom.licenseKey">abc</prop>
	</osgix:cm-properties>
	
	<!-- Published Services -->
	
	<osgi:service ref="weatherDotComDayDatumDataSource" 
		interface="net.solarnetwork.node.DatumDataSource"
		ranking="1">
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.weather.DayDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
	<osgi:service ref="weatherDotComWeatherDatumDataSource" 
		interface="net.solarnetwork.node.DatumDataSource"
		ranking="1">
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.weather.WeatherDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
</beans>
