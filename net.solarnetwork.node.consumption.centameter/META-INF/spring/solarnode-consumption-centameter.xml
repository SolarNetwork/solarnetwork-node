<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<ctx:property-placeholder properties-ref="centameter.cfg"/>
	
	<bean id="centameterConsumptionDatumDataSource"
		class="net.solarnetwork.node.consumption.impl.CentameterConsumptionDatumDataSource">
		<property name="addressSourceMappingValue" value="${CentameterConsumptionDataSource.addressSourceMappingValue}"/>
		<property name="ampSensorIndex" value="${CentameterConsumptionDataSource.ampSensorIndex}"/>
		<property name="voltage" value="${CentameterConsumptionDataSource.voltage}"/>
		<property name="sourceIdFilterValue" value="${CentameterConsumptionDataSource.sourceIdFilterValue}"/>
		<property name="sourceIdFormat" value="${CentameterConsumptionDataSource.sourceIdFormat}"/>
		<property name="multiAmpSensorIndexFlags" value="${CentameterConsumptionDataSource.multiAmpSensorIndexFlags}"/>
		<property name="dataCollectorFactory" ref="centameterDataCollectorFactory"/>
		<property name="collectAllSourceIds" value="${CentameterConsumptionDataSource.collectAllSourceIds}"/>
		<property name="collectAllSourceIdsTimeout" value="${CentameterConsumptionDataSource.collectAllSourceIdsTimeout}"/>
	</bean>
	
	<bean id="priceCentameterConsumptionDatumDataSource" class="net.solarnetwork.node.PriceLocationDatumDataSource">
		<property name="delegate" ref="centameterConsumptionDatumDataSource"/>
		<property name="priceLocationService" ref="priceLocationService"/>
		<property name="priceSource" value="${CentameterConsumptionDataSource.priceSource}"/>
		<property name="priceLocation" value="${CentameterConsumptionDataSource.priceLocation}"/>
	</bean>
	
</beans>
