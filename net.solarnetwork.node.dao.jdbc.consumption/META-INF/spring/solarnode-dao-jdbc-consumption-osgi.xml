<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
						http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="dao.jdbc.consumption.cfg" persistent-id="net.solarnetwork.node.dao.jdbc.consumption">
		<prop key="JdbcConsumptionDatumDao.initSqlResource">classpath:/net/solarnetwork/node/dao/jdbc/consumption/derby-consumptiondatum-init.sql</prop>
		<prop key="JdbcConsumptionDatumDao.sqlResourcePrefix">derby-consumptiondatum</prop>
		<prop key="JdbcConsumptionDatumDao.useAutogeneratedKeys">true</prop>
		<prop key="JdbcConsumptionDatumDao.sqlInsertDatum">INSERT INTO solarnode.sn_consum_datum
				(source_id, price_loc_id, amps, voltage, watt_hour, error_msg) VALUES
				(?,?,?,?,?,?)</prop>
	</osgix:cm-properties>
	
	<!-- Service References -->
	
	<osgi:reference id="dataSource" interface="javax.sql.DataSource" filter="(db=node)"/>
	
	<osgi:reference id="txManager" interface="org.springframework.transaction.PlatformTransactionManager"
		filter="(db=node)"/>
	
	<!-- Published Services -->
	
	<osgi:service ref="jdbcConsumptionDatumDao" ranking="1">
		<osgi:interfaces>
			<value>net.solarnetwork.node.dao.DatumDao</value>
			<value>net.solarnetwork.node.dao.jdbc.JdbcDao</value>
		</osgi:interfaces>
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.consumption.ConsumptionDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
	
</beans>
