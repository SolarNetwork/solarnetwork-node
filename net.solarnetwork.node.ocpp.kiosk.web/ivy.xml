<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
	<info organisation="net.solarnetwork.node" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom"/>
		<artifact type="bundle" ext="jar"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(compile)">
		<dependency org="javax.servlet" name="com.springsource.javax.servlet" rev="2.5.0" />
		<dependency org="joda-time" name="joda-time" rev="2.1"/>
    	<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="[1.33,2.0)"/>
    	<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.web" rev="[1.10,2.0)"/>
    	<dependency org="net.solarnetwork.node" name="net.solarnetwork.node" rev="[1.43,2.0)"/>
    	<dependency org="net.solarnetwork.node" name="net.solarnetwork.node.ocpp" rev="[0.4,2.0)"/>
		<dependency org="org.osgi" name="org.osgi.core" rev="5.0.0"/>
    	<dependency org="org.slf4j" name="slf4j-api" rev="1.7.21"/>
		<dependency org="org.springframework" name="spring-beans" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-context" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-jdbc" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-messaging" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-web" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework.security" name="spring-security-core" rev="4.1.0.RELEASE"/>
		<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.spring-security-messaging" rev="4.1.0.RELEASE_1" conf="runtime"/>
		<dependency org="org.springframework.security" name="spring-security-taglibs" rev="4.1.0.RELEASE" conf="runtime"/>
		<dependency org="org.springframework.security" name="spring-security-web" rev="4.1.0.RELEASE" conf="runtime"/>
    </dependencies>
</ivy-module>
