<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<!-- Service References -->
	
	<osgi:reference id="priceLocationServiceRef" cardinality="0..1"
		interface="net.solarnetwork.node.PriceLocationService">
		<osgi:listener ref="priceLocationService" bind-method="onBind" unbind-method="onUnbind"/>
	</osgi:reference>
	
	<bean id="priceLocationService" class="net.solarnetwork.util.OptionalServiceTracker">
		<property name="service" ref="priceLocationServiceRef"/>
	</bean>

	<!-- Published Services -->

	<osgi:service id="mockConsumptionDatumDataSourceService" ref="mockPriceConsumptionDatumDataSource" 
		interface="net.solarnetwork.node.DatumDataSource" ranking="-1">
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.consumption.ConsumptionDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
	<!--osgi:service id="mockConsumptionDatumDaoService" ref="mockConsumptionDatumDao" 
		interface="net.solarnetwork.node.dao.DatumDao" ranking="-1">
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.consumption.ConsumptionDatum"/>
		</osgi:service-properties>
	</osgi:service-->
	
</beans>
