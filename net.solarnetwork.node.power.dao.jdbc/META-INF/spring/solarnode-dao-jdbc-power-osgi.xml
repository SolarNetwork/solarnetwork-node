<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
						http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="dao.jdbc.power.cfg" persistent-id="net.solarnetwork.node.dao.jdbc.power">
		<prop key="JdbcPowerDatumDao.initSqlResource">classpath:/net/solarnetwork/node/dao/jdbc/power/derby-powerdatum-init.sql</prop>
		<prop key="JdbcPowerDatumDao.sqlResourcePrefix">derby-powerdatum</prop>
		<prop key="JdbcPowerDatumDao.useAutogeneratedKeys">true</prop>
		<prop key="JdbcPowerDatumDao.sqlInsertDatum">INSERT INTO solarnode.sn_power_datum
			(source_id, price_loc_id, pv_volts, pv_amps, bat_volts, bat_amp_hrs, dc_out_volts,
			dc_out_amps, ac_out_volts, ac_out_amps, kwatt_hours,
			amp_hours, error_msg)
			VALUES (?,?,?,?,?,?,?,?,?,?,?,?,?)</prop>
		<prop key="JdbcPowerDatumDao.ignoreMockData">true</prop>
	</osgix:cm-properties>

	<!-- Service References -->

	<osgi:reference id="dataSource" interface="javax.sql.DataSource" filter="(db=node)"/>

	<osgi:reference id="txManager" interface="org.springframework.transaction.PlatformTransactionManager"
		filter="(db=node)"/>
	
	<!-- Published Services -->

	<osgi:service ref="jdbcPowerDatumDao" ranking="1">
		<osgi:interfaces>
			<value>net.solarnetwork.node.dao.DatumDao</value>
			<value>net.solarnetwork.node.dao.jdbc.JdbcDao</value>
		</osgi:interfaces>
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.power.PowerDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
	
</beans>
