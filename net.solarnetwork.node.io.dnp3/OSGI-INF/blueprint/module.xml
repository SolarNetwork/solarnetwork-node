<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:osgix="http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium
		http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium/gemini-blueprint-compendium.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="cfg" persistent-id="net.solarnetwork.node.io.dnp3">
		<beans:prop key="concurrency">1</beans:prop>
	</osgix:cm-properties>

	<ctx:property-placeholder properties-ref="cfg"/>
	
	<!-- General -->
	
	<reference id="taskScheduler" interface="org.springframework.scheduling.TaskScheduler" filter="(function=node)"/>
	
	<reference id="taskExecutor" interface="org.springframework.core.task.TaskExecutor" filter="(function=node)"/>
	
	<reference id="settingsService" interface="net.solarnetwork.node.settings.SettingsService"/>
	
	<bean id="instructionExecutionService" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.reactor.InstructionExecutionService"/>
		<property name="sticky" value="true"/>
	</bean>	
	
	<bean id="datumMetadataService" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.service.DatumMetadataService"/>
		<property name="sticky" value="true"/>
	</bean>
		
	<bean id="datumQueue" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.service.DatumQueue"/>
		<property name="sticky" value="true"/>
	</bean>

	<bean id="datumService" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.service.DatumService"/>
		<property name="sticky" value="true"/>
	</bean>

	<bean id="placeholderService" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.service.PlaceholderService"/>
		<property name="sticky" value="true"/>
	</bean>

	<bean id="identityService" class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
		<argument ref="bundleContext"/>
		<property name="serviceClassName" value="net.solarnetwork.node.service.IdentityService"/>
		<property name="sticky" value="true"/>
	</bean>	

	<!-- DNP3Manager -->

	<service interface="com.automatak.dnp3.DNP3Manager" ref="manager"/>

	<bean id="manager" class="com.automatak.dnp3.impl.DNP3ManagerFactory" factory-method="createManager">
		<argument value="${concurrency}"/>
		<argument>
			<bean class="net.solarnetwork.dnp3.util.Slf4jLogHandler"/>
		</argument>
	</bean>
	
	<!-- TCP server channel component -->

	<bean id="serverTcpMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames" value="net.solarnetwork.node.io.dnp3.impl.TcpServerChannelService"/>
		<property name="parentMessageSource">
			<bean class="net.solarnetwork.support.PrefixedMessageSource">
				<property name="prefix" value="config."/>
				<property name="delegate">
					<bean class="org.springframework.context.support.ResourceBundleMessageSource">
						<property name="basenames">
							<list>
								<value>net.solarnetwork.node.io.dnp3.impl.BaseChannelConfiguration</value>
								<value>net.solarnetwork.node.io.dnp3.impl.TcpServerChannelConfiguration</value>
								<value>net.solarnetwork.service.support.BasicIdentifiable</value>
							</list>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<service interface="net.solarnetwork.settings.SettingSpecifierProviderFactory">
		<bean class="net.solarnetwork.settings.support.BasicSettingSpecifierProviderFactory">
			<property name="displayName" value="DNP3 TCP connection"/>
			<property name="factoryUid" value="net.solarnetwork.node.io.dnp3.tcp"/>
			<property name="messageSource" ref="serverTcpMessageSource"/>
		</bean>
	</service>
	
	<osgix:managed-service-factory factory-pid="net.solarnetwork.node.io.dnp3.tcp" autowire-on-update="true" update-method="configurationChanged">
		<osgix:interfaces>
			<beans:value>net.solarnetwork.node.io.dnp3.ChannelService</beans:value>
			<beans:value>net.solarnetwork.settings.SettingSpecifierProvider</beans:value>
		</osgix:interfaces>
		<osgix:service-properties>
			<beans:entry key="settingPid" value="net.solarnetwork.node.io.dnp3.tcp"/>
			<beans:entry key="function" value="server"/>
		</osgix:service-properties>
		<bean class="net.solarnetwork.node.io.dnp3.impl.TcpServerChannelService" init-method="serviceDidStartup" destroy-method="serviceDidShutdown">
			<argument ref="manager"/>
			<property name="messageSource" ref="serverTcpMessageSource"/>
		</bean>
	</osgix:managed-service-factory>
		
	<!-- DNP3 outstation component -->

	<bean id="outstationMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>net.solarnetwork.node.io.dnp3.impl.DefaultOutstationService</value>
				<value>net.solarnetwork.service.support.BasicIdentifiable</value>
			</list>
		</property>
		<property name="parentMessageSource">
			<bean class="net.solarnetwork.support.PrefixedMessageSource">
				<property name="delegates">
					<map>
						<entry key="controlConfigsItem.">
							<bean class="org.springframework.context.support.ResourceBundleMessageSource">
								<property name="basenames" value="net.solarnetwork.node.io.dnp3.domain.ControlConfig"/>
							</bean>
						</entry>
						<entry key="measurementConfigsItem.">
							<bean class="org.springframework.context.support.ResourceBundleMessageSource">
								<property name="basenames" value="net.solarnetwork.node.io.dnp3.domain.MeasurementConfig"/>
							</bean>
						</entry>
					</map>
				</property>
			</bean>
		</property>
	</bean>
	
	<service interface="net.solarnetwork.settings.SettingSpecifierProviderFactory">
		<bean class="net.solarnetwork.settings.support.BasicSettingSpecifierProviderFactory">
			<property name="displayName" value="DNP3 outstation"/>
			<property name="factoryUid" value="net.solarnetwork.node.io.dnp3.outstation"/>
			<property name="messageSource" ref="outstationMessageSource"/>
		</bean>
	</service>
	
	<osgix:managed-service-factory factory-pid="net.solarnetwork.node.io.dnp3.outstation" autowire-on-update="true" update-method="configurationChanged">
		<osgix:interfaces>
			<beans:value>net.solarnetwork.node.io.dnp3.OutstationService</beans:value>
			<beans:value>net.solarnetwork.settings.SettingSpecifierProvider</beans:value>
			<beans:value>org.osgi.service.event.EventHandler</beans:value>
		</osgix:interfaces>
		<osgix:service-properties>
			<beans:entry key="settingPid" value="net.solarnetwork.node.io.dnp3.outstation"/>
			<beans:entry key="#{T(org.osgi.service.event.EventConstants).EVENT_TOPIC}">
				<beans:array value-type="java.lang.String">
					<beans:value>#{T(net.solarnetwork.node.service.DatumDataSource).EVENT_TOPIC_DATUM_CAPTURED}</beans:value>
					<beans:value>#{T(net.solarnetwork.node.service.NodeControlProvider).EVENT_TOPIC_CONTROL_INFO_CAPTURED}</beans:value>
					<beans:value>#{T(net.solarnetwork.node.service.NodeControlProvider).EVENT_TOPIC_CONTROL_INFO_CHANGED}</beans:value>
				</beans:array>
			</beans:entry>
		</osgix:service-properties>
		<bean class="net.solarnetwork.node.io.dnp3.impl.DefaultOutstationService" init-method="serviceDidStartup" destroy-method="serviceDidShutdown">
			<argument>
				<bean class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
					<argument ref="bundleContext"/>
					<property name="serviceClassName" value="net.solarnetwork.node.io.dnp3.ChannelService"/>
					<property name="serviceFilter" value="(function=server)"/>
					<property name="ignoreEmptyPropertyFilterValues" value="false"/>
					<property name="propertyFilters">
						<map>
							<entry key="uid" value=""/>
						</map>
					</property>
				</bean>
			</argument>
			<argument ref="instructionExecutionService"/>
			<property name="messageSource" ref="outstationMessageSource"/>
			<property name="taskExecutor" ref="taskExecutor"/>
			<property name="taskScheduler" ref="taskScheduler"/>
		</bean>
	</osgix:managed-service-factory>

	<!-- TCP client channel component -->

	<bean id="clientTcpMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames" value="net.solarnetwork.node.io.dnp3.impl.TcpClientChannelService"/>
		<property name="parentMessageSource">
			<bean class="net.solarnetwork.support.PrefixedMessageSource">
				<property name="prefix" value="config."/>
				<property name="delegate">
					<bean class="org.springframework.context.support.ResourceBundleMessageSource">
						<property name="basenames">
							<list>
								<value>net.solarnetwork.node.io.dnp3.impl.BaseChannelConfiguration</value>
								<value>net.solarnetwork.node.io.dnp3.impl.TcpClientChannelConfiguration</value>
								<value>net.solarnetwork.service.support.BasicIdentifiable</value>
							</list>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<service interface="net.solarnetwork.settings.SettingSpecifierProviderFactory">
		<bean class="net.solarnetwork.settings.support.BasicSettingSpecifierProviderFactory">
			<property name="displayName" value="DNP3 TCP client connection"/>
			<property name="factoryUid" value="net.solarnetwork.node.io.dnp3.client.tcp"/>
			<property name="messageSource" ref="clientTcpMessageSource"/>
		</bean>
	</service>

	<osgix:managed-service-factory factory-pid="net.solarnetwork.node.io.dnp3.client.tcp" autowire-on-update="true" update-method="configurationChanged">
		<osgix:interfaces>
			<beans:value>net.solarnetwork.node.io.dnp3.ChannelService</beans:value>
			<beans:value>net.solarnetwork.settings.SettingSpecifierProvider</beans:value>
		</osgix:interfaces>
		<osgix:service-properties>
			<beans:entry key="settingPid" value="net.solarnetwork.node.io.dnp3.client.tcp"/>
			<beans:entry key="function" value="client"/>
		</osgix:service-properties>
		<bean class="net.solarnetwork.node.io.dnp3.impl.TcpClientChannelService" init-method="serviceDidStartup" destroy-method="serviceDidShutdown">
			<argument ref="manager"/>
			<property name="messageSource" ref="clientTcpMessageSource"/>
		</bean>
	</osgix:managed-service-factory>

	<!-- DNP3 control center component -->

	<bean id="controlCenterMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>net.solarnetwork.node.io.dnp3.impl.DatumControlCenterService</value>
				<value>net.solarnetwork.service.support.BasicIdentifiable</value>
			</list>
		</property>
		<property name="parentMessageSource">
			<bean class="net.solarnetwork.support.PrefixedMessageSource">
				<property name="prefix" value="datumConfigsItem."/>
				<property name="delegate">
					<bean class="org.springframework.context.support.ResourceBundleMessageSource">
						<property name="basenames" value="net.solarnetwork.node.io.dnp3.domain.DatumConfig"/>
						<property name="parentMessageSource">
							<bean class="net.solarnetwork.support.PrefixedMessageSource">
								<property name="prefix" value="measurementConfigsItem."/>
								<property name="delegate">
									<bean class="org.springframework.context.support.ResourceBundleMessageSource">
										<property name="basenames" value="net.solarnetwork.node.io.dnp3.domain.ClientMeasurementConfig"/>
									</bean>
								</property>
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="controlCenterJobMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>net.solarnetwork.node.service.support.DatumDataSourceSupport</value>
			</list>
		</property>
		<property name="parentMessageSource">
			<bean class="net.solarnetwork.support.PrefixedMessageSource">
				<property name="prefix" value="multiDatumDataSource."/>
				<property name="delegate" ref="controlCenterMessageSource"/>
			</bean>
		</property>
	</bean>
	
	<service>
		<interfaces>
			<value>net.solarnetwork.settings.SettingSpecifierProvider</value>
			<value>net.solarnetwork.node.settings.SettingResourceHandler</value>
		</interfaces>
		<bean class="net.solarnetwork.node.io.dnp3.impl.DatumControlCenterCsvConfigurer">
			<argument ref="settingsService"/>
			<argument ref="identityService"/>
			<property name="messageSource">
				<bean class="org.springframework.context.support.ResourceBundleMessageSource">
					<property name="basenames">
						<list>
							<value>net.solarnetwork.node.io.dnp3.impl.DatumControlCenterCsvConfigurer</value>
							<value>net.solarnetwork.service.support.BasicIdentifiable</value>
						</list>
					</property>
				</bean>
			</property>
		</bean>
	</service>
	
	<service interface="net.solarnetwork.settings.SettingSpecifierProviderFactory">
		<bean class="net.solarnetwork.settings.support.BasicSettingSpecifierProviderFactory">
			<property name="displayName" value="DNP3 control center"/>
			<property name="factoryUid" value="net.solarnetwork.node.io.dnp3.controlcenter"/>
			<property name="messageSource" ref="controlCenterMessageSource"/>
		</bean>
	</service>
	
	<osgix:managed-service-factory factory-pid="net.solarnetwork.node.io.dnp3.controlcenter" autowire-on-update="true" update-method="configurationChanged">
		<osgix:interfaces>
			<beans:value>net.solarnetwork.node.job.ManagedJob</beans:value>
		</osgix:interfaces>
		<bean class="net.solarnetwork.node.job.SimpleManagedJob" init-method="serviceDidStartup" destroy-method="serviceDidShutdown">
			<argument>
				<bean class="net.solarnetwork.node.job.DatumDataSourcePollManagedJob">
					<property name="datumMetadataService" ref="datumMetadataService"/>
					<property name="datumQueue" ref="datumQueue"/>
					<property name="multiDatumDataSource">
						<bean class="net.solarnetwork.node.io.dnp3.impl.DatumControlCenterService">
							<argument>
								<bean class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
									<argument ref="bundleContext"/>
									<property name="serviceClassName" value="net.solarnetwork.node.io.dnp3.ChannelService"/>
									<property name="serviceFilter" value="(function=client)"/>
									<property name="ignoreEmptyPropertyFilterValues" value="false"/>
									<property name="propertyFilters">
										<map>
											<entry key="uid" value=""/>
										</map>
									</property>
								</bean>
							</argument>
							<property name="messageSource" ref="controlCenterJobMessageSource"/>
							<property name="taskExecutor" ref="taskExecutor"/>
							<property name="taskScheduler" ref="taskScheduler"/>
							<property name="datumQueue" ref="datumQueue"/>
						</bean>
					</property>
				</bean>
			</argument>
			<argument value="0 * * * * ?"/>
			<property name="serviceProviderConfigurations">
				<map>
					<entry key="multiDatumDataSource">
						<bean class="net.solarnetwork.node.job.SimpleServiceProviderConfiguration">
							<property name="interfaces">
								<list>
									<value>net.solarnetwork.node.io.dnp3.ControlCenterService</value>
									<value>net.solarnetwork.node.service.MultiDatumDataSource</value>
								</list>
							</property>
							<property name="properties">
								<map>
									<entry key="datumClassName" value="net.solarnetwork.domain.datum.Datum"/>
								</map>
							</property>
						</bean>
					</entry>
				</map>
			</property>
		</bean>
	</osgix:managed-service-factory>

</blueprint>
