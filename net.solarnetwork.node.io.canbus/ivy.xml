<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
	<info organisation="net.solarnetwork.node" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="javadoc" visibility="public" description="Javadoc documentation"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom"/>
		<artifact type="bundle" ext="jar"/>
		<artifact type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(compile)">
		<dependency org="io.netty" name="netty-buffer" rev="4.1.42.Final"/>
		<dependency org="io.netty" name="netty-codec" rev="4.1.42.Final"/>
		<dependency org="io.netty" name="netty-common" rev="4.1.42.Final"/>
		<dependency org="io.netty" name="netty-resolver" rev="4.1.42.Final"/>
		<dependency org="io.netty" name="netty-transport" rev="4.1.42.Final"/>
		<dependency org="javax.measure" name="unit-api" rev="2.0" />
		<dependency org="javax.xml.bind" name="jaxb-api" rev="2.2.12"/>
       	<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="[1.57,2.0)"/>
       	<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.indriya" rev="[2.0.4,3.0)"/>
       	<dependency org="net.solarnetwork.node" name="net.solarnetwork.node" rev="[1.73,2.0)"/>
 		<dependency org="org.slf4j" name="slf4j-api" rev="1.7.21"/>
		<dependency org="org.springframework" name="spring-beans" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-context" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-context-support" rev="4.2.6.RELEASE"/>
		<dependency org="org.springframework" name="spring-core" rev="4.2.6.RELEASE"/>
	</dependencies>
</ivy-module>
