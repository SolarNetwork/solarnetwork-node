<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
						http://www.springframework.org/schema/osgi-compendium http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="dao.jdbc.weather.cfg" persistent-id="net.solarnetwork.node.dao.jdbc.weather">
		<prop key="JdbcWeatherDatumDao.initSqlResource">classpath:/net/solarnetwork/node/dao/jdbc/weather/derby-weatherdatum-init.sql</prop>
		<prop key="JdbcWeatherDatumDao.sqlResourcePrefix">derby-weatherdatum</prop>
		<prop key="JdbcWeatherDatumDao.useAutogeneratedKeys">true</prop>
		<prop key="JdbcWeatherDatumDao.sqlInsertDatum">INSERT INTO solarnode.sn_weather_datum
				(source_id, info_date, sky_cond, temperature, humidity,
				bar_pressure, bar_delta, visibility, uv_index, dew_point,
				error_msg) VALUES
				(?,?,?,?,?,?,?,?,?,?,?)</prop>
		<prop key="JdbcDayDatumDao.initSqlResource">classpath:/net/solarnetwork/node/dao/jdbc/weather/derby-daydatum-init.sql</prop>
		<prop key="JdbcDayDatumDao.sqlResourcePrefix">derby-daydatum</prop>
		<prop key="JdbcDayDatumDao.useAutogeneratedKeys">true</prop>
		<prop key="JdbcDayDatumDao.sqlInsertDatum">INSERT INTO solarnode.sn_day_datum
				(source_id, tz, latitude, longitude, sunrise, sunset, error_msg) VALUES
				(?,?,?,?,?,?,?)</prop>
	</osgix:cm-properties>
	
	<!-- Service References -->
	
	<osgi:reference id="dataSource" interface="javax.sql.DataSource" filter="(db=node)"/>
	
	<osgi:reference id="txManager" interface="org.springframework.transaction.PlatformTransactionManager"
		filter="(db=node)"/>
	
	<!-- Published Services -->
	
	<osgi:service ref="jdbcWeatherDatumDao" ranking="1">
		<osgi:interfaces>
			<value>net.solarnetwork.node.dao.DatumDao</value>
			<value>net.solarnetwork.node.dao.jdbc.JdbcDao</value>
		</osgi:interfaces>
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.weather.WeatherDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
	<osgi:service ref="jdbcDayDatumDao" ranking="1">
		<osgi:interfaces>
			<value>net.solarnetwork.node.dao.DatumDao</value>
			<value>net.solarnetwork.node.dao.jdbc.JdbcDao</value>
		</osgi:interfaces>
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.weather.DayDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
</beans>
