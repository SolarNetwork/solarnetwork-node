<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<ctx:property-placeholder properties-ref="upload.cfg"/>
	
	<bean id="javaBeanWebPostUploadService"
		class="net.solarnetwork.node.upload.JavaBeanWebPostUploadService"
		init-method="init">
		<property name="identityService" ref="identityService"/>
		<property name="datumIdXPath" value="/*/@id"/>
		<property name="datumClassNameUrlMapping">
			<map>
				<entry key="net.solarnetwork.node.consumption.ConsumptionDatum" 
					value="/consumptionCollector.do"/>
				<entry key="net.solarnetwork.node.power.PowerDatum" 
					value="/powerCollector.do"/>
				<entry key="net.solarnetwork.node.price.PriceDatum" 
					value="/priceCollector.do"/>
				<entry key="net.solarnetwork.node.weather.DayDatum" 
					value="/dayCollector.do"/>
				<entry key="net.solarnetwork.node.weather.WeatherDatum" 
					value="/weatherCollector.do"/>
			</map>
		</property>
	</bean>
	
	<!-- Upload job -->
	
	<bean id="javaBeanDatumUploader" class="net.solarnetwork.node.job.SimpleTriggerAndJobDetail">
		<property name="trigger" ref="javaBeanDatumUploadTrigger"/>
		<property name="jobDetail" ref="javaBeanDatumUploadJob"/>
	</bean>
	
	<bean id="javaBeanDatumUploadTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="javaBeanDatumUploadJob"/>
		<property name="name" value="JavaBean Datum Uploader"/>
		<property name="cronExpression" value="${job.datumUploader.cron}"/>
		<property name="misfireInstructionName" value="MISFIRE_INSTRUCTION_DO_NOTHING"/>
	</bean>
	
	<bean id="javaBeanDatumUploadJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="net.solarnetwork.node.job.DatumDaoUploadJob"/>
		<property name="jobDataAsMap">
			<map>
				<entry key="daos" value-ref="datumDaoCollection"/>
				<entry key="uploadService" value-ref="javaBeanWebPostUploadService"/>
			</map>
		</property>
	</bean>
	
</beans>
