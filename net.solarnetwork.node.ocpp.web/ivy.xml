<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
	<info organisation="net.solarnetwork.node" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom"/>
		<artifact type="bundle" ext="jar"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(compile)">
		<dependency org="javax.servlet" name="com.springsource.javax.servlet" rev="2.5.0" />
    	<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="[1.29,2.0)"/>
    	<dependency org="net.solarnetwork.common" name="net.solarnetwork.common.web" rev="[1.8,2.0)"/>
    	<dependency org="net.solarnetwork.external" name="net.solarnetwork.external.ocpp.client" rev="1.7.0"/>
    	<dependency org="net.solarnetwork.node" name="net.solarnetwork.node" rev="[1.33,2.0)"/>
    	<dependency org="net.solarnetwork.node" name="net.solarnetwork.node.ocpp" rev="0.6.0"/>
    	<dependency org="org.eclipse.gemini" name="org.eclipse.gemini.blueprint.core" rev="1.0.2.RELEASE" conf="runtime"/>
    	<dependency org="org.slf4j" name="slf4j-api" rev="1.7.21"/>
		<dependency org="org.springframework" name="spring-context-support" rev="4.2.6.RELEASE"/>
	</dependencies>
</ivy-module>
