<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/osgi
		http://www.springframework.org/schema/osgi/spring-osgi.xsd
		http://www.springframework.org/schema/osgi-compendium
		http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- Configuration -->
	
	<osgix:cm-properties id="jamod.cfg" persistent-id="net.solarnetwork.node.power.jamod">
		<prop key="JamodPowerDatumDataSource.unitId">1</prop>
		<prop key="JamodPowerDatumDataSource.register">8</prop>
		<prop key="JamodPowerDatumDataSource.count">5</prop>
		<prop key="JamodPowerDatumDataSource.transactionRepeat">1</prop>
	</osgix:cm-properties>
	
	<!-- Service References -->
	
	<osgi:reference id="jamodSerialConfiguration" 
		interface="net.solarnetwork.node.util.BeanConfiguration"
		filter="(&amp;(datumClassName=net.solarnetwork.node.power.PowerDatum)(factoryObjectClassName=net.wimpi.modbus.util.SerialParameters))"/>
	
	<!-- Published Services -->
	
	<osgi:service ref="jamodPowerDatumDataSource" 
		interface="net.solarnetwork.node.DatumDataSource"
		ranking="1">
		<osgi:service-properties>
			<entry key="datumClassName" value="net.solarnetwork.node.power.PowerDatum"/>
		</osgi:service-properties>
	</osgi:service>
	
</beans>
