<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="net.solarnetwork.node.test" module="${bundle.name}">
    	<extends organisation="net.solarnetwork.node"
    		module="${bundle.name}" revision="[1.0,2)"
    		location="../${test.bundle.name}/ivy.xml"/>
    </info>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(runtime)">
		<!-- Logging -->
		<dependency org="org.apache.logging.log4j" name="log4j-api" rev="2.17.2" conf="runtime"/>
		<dependency org="org.apache.logging.log4j" name="log4j-core" rev="2.17.2" conf="runtime"/>
		<dependency org="org.apache.logging.log4j" name="log4j-slf4j-impl" rev="2.17.2" conf="runtime"/>
		<dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.7.32" conf="runtime"/>
		<dependency org="org.slf4j" name="osgi-over-slf4j" rev="1.7.32" conf="runtime"/>

		<!-- Testing -->
		<dependency org="junit" name="junit" rev="4.12"/>
		<dependency org="org.easymock" name="easymock" rev="3.6"/>
		<dependency org="org.hamcrest" name="hamcrest-all" rev="1.3"/>
		<dependency org="org.springframework" name="spring-test" rev="5.3.24"/>

		<!-- Testing support -->
		<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.derby" rev="10.12.1.1_1" conf="runtime"/>
		<dependency org="com.h2database" name="h2" rev="2.1.210" conf="runtime"/>
		<dependency org="com.zaxxer" name="HikariCP" rev="6.3.0" conf="runtime"/>

		<exclude module="com.springsource.slf4j.api"/>
    </dependencies>
</ivy-module>
